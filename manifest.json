{
	"manifest_version": 3,
	"name": "LeetCode++",
	"description": "Disable your browser's save shortcut on LeetCode â€” and a few other annoyances.",
	"version": "1.0.0",
	"author": "Gary Tou <gary@garytou.com> (https://garytou.com)",
	"permissions": ["storage"],
	"action": {
		"default_popup": "popup/popup.html",
		"default_icon": {
			"16": "images/icon16.png",
			"32": "images/icon32.png",
			"48": "images/icon48.png",
			"128": "images/icon128.png"
		}
	},
	"content_scripts": [
		{
			"matches": ["https://leetcode.com/problems/*"],
			"js": [
				"scripts/content.js",
				"vendor/jquery/jquery-3.6.2.min.js",
				"vendor/jquery-ui/jquery-ui-1.13.2.min.js"
			]
		}
	],
	"background": {
		"service_worker": "sw.js"
	},
	"options_page": "popup/popup.html",
	"icons": {
		"16": "images/icon16.png",
		"32": "images/icon32.png",
		"48": "images/icon48.png",
		"128": "images/icon128.png"
	}
}
